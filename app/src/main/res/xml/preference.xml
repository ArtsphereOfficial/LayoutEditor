<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="@string/common">
        <ListPreference
            android:defaultValue="3"
            android:dialogTitle="@string/msg_choose_theme"
            android:entries="@array/theme"
            android:entryValues="@array/theme_value"
            app:useSimpleSummaryProvider="true"
            app:key="app_theme"
            app:title="@string/theme"
            app:icon="@drawable/brightness_4" />
        
        <SwitchPreferenceCompat
            app:title="@string/enable_vibration"
            app:summary="@string/summary_enable_vibration"
            app:key="vibration"
            app:icon="@drawable/vibrate"
            android:defaultValue="false" />
            
        <SwitchPreferenceCompat
            app:title="@string/show_stroke"
            app:summary="@string/summary_show_stroke"
            app:key="toggle_stroke"
            app:icon="@drawable/dots_square"
            android:defaultValue="true" />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
