<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="@string/common"
        app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            app:title="@string/pref_common_use_vibration"
            app:summary="@string/pref_common_use_vibration_summary"
            app:key="vibration"
            app:icon="@drawable/vibrate"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:title="@string/pref_common_show_stroke"
            app:summary="@string/pref_common_show_stroke_summary"
            app:key="show_stroke"
            app:icon="@drawable/selection"
            app:defaultValue="true" />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
